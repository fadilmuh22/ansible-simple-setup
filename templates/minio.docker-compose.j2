services:
  minio:
    image: quay.io/minio/minio:RELEASE.2022-02-18T01-50-10Z
    container_name: minio
    restart: unless-stopped

    environment:
      MINIO_ROOT_USER: {{ minio_user }}
      MINIO_ROOT_PASSWORD: {{ minio_password }}

    command: server /data --console-address ":9001"

    ports:
      - "9005:9000"
      - "9006:9001"

    volumes:
      - minio-data:/data

volumes:
  minio-data:

