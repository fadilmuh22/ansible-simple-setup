services:
  jaeger:
    image: jaegertracing/all-in-one:latest
    container_name: 'jaeger'
    environment:
      - COLLECTOR_OTLP_ENABLED=true
    ports:
     - '16686:16686'
     - '14268:14268'
     - '6831:6831/udp'
     - '6832:6832/udp'
     - '5778:5778'
     - '5775:5775/udp'
     - '9411:9411'
     - '4317:4317'
     - '4318:4318'
    networks:
      - common-backend-network

networks:
  common-backend-network:
    external: true
